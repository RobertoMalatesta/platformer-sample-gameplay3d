form
{
    theme = res/ui/gamepad.theme
    size = 100%, 100%

    container left
    {
        alignment = ALIGN_BOTTOM_LEFT
        size = 288, 288
        
        joystick
        {
            style = joystickStyle
            size = 100%, 100%
            alignment = ALIGN_VCENTER_HCENTER
            radius = 8
        }

    }

    container right
    {
        alignment = ALIGN_BOTTOM_RIGHT
        size = 256, 256

        button jump
        {
            mapping = BUTTON_A
            style = jumpButtonStyle
            size = 65%, 65%
            alignment = ALIGN_VCENTER_HCENTER
        }
    }
}
